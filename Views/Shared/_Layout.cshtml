
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodersResort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-center">
                <div class="nav-header">
                    <a class="navbar-brand" asp-area="" asp-controller="Rooms" asp-action="Index">Coder Resort</a>
                </div>
                <ul class="nav-links show-nav">
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Rooms" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Rooms" asp-action="Rooms">Rooms</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        
            @RenderBody()
        
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
